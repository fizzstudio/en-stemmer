{
    "compilerOptions": {
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist/",
        "target":"ES6",
        "declaration":true,
        "strictNullChecks":true,
        "alwaysStrict":true,
        "forceConsistentCasingInFileNames":true
    },
    "files": [
        "./src/index.ts"
    ],
    "exclude": [
        "./node_modules/*"
    ]
}